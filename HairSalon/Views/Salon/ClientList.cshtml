@{
  Layout = "_Layout";
}
<div class="center">
  <div class="move">
    <div class="test">

      <h1 class="name">@Model["StylistName"].GetName()</h1>
      <p>List of clients</p>
      <table>
      <tr>
        <th>Client Number</th>
        <th>NAME (edit)</th>
        <th>Stylist</th>
        <th>Remove</th>
      </tr>
      @foreach(var client in Model["clientList"])
      {
      @if (client.GetName() != "Welcome")
      {
      <tr>
        <td>@client.GetId()</td>
        <td><a href="/clients/@client.GetId()/name">@client.GetName()</a></td>
        <td>@Model["StylistName"].GetId()</td>
        <td><a href="/clients/@client.GetId()/delete">Delete</a></td>
      </tr>
      }
      }
      </table>
      <p><a href='/clients/@Model["StylistName"].GetId()/new'>Add new client<a/></P>
      <p><a href='/salon'>Back to Stylists<a/></P>
      <p><a href='/'>Home<a/></p>
    </div>
  </div>
</div>

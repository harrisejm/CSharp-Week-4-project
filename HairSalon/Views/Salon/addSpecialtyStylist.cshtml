@{
  Layout = "_Layout";
}

<div class="center">
  <div class="move">
    <div class="test">

     <p>Add Specialty to stylist: @Model["StylistName"].GetName()</p>
     <form action="/salon/specialty/@Model["StylistName"].GetId()/all" method="post">
       <div class='form-group'>

       <label>

       @foreach(var specialty in Model["SpecialtyList"])
       {
          <label>
         <input type="Radio" name="new-specialty" value="@specialty.GetSpecialtyId()" checked>
         @specialty.GetSpecialtyName()
         </label>
          <br>
        }

       </div>

       <button type="submit">Submit</button>
     </form>

     <p><a href='/salon'>View List of Stylists<a/></P>
     <p><a href='/'>Home<a/></p>
    </div>
  </div>
</div>

@{
  Layout = "_Layout";
}
<div class="center">
  <div class="move">
    <div class="test">
    <p>Change Stylist's Name</p>
      <form action="/stylist/@Model.GetId()/name/new" method="post">
        <div class='form-group'>
          <label for='new-stylist'>Enter New Name</label>
          <input id='new-stylist' name='new-stylist' class='form-control' type='text' value='@Model.GetName()' required>
        </div>

        <button type="submit">Submit</button>
      </form>
      <p><a href='/'>Home<a/></p>
    </div>
  </div>
</div>

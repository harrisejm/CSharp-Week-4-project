@{
  Layout = "_Layout";
}
<div class="center">
  <div class="move">
    <div class="test">
    <h1 class="name">@Model["StylistName"].GetName()</h1>
      <p>List of Specialties</p>
      <table>
        <tr>
          <th>Specialty No.</th>
          <th>NAME</th>
          <th>Delete</th>
        </tr>
        @foreach(var specialty in Model["SpecialtyList"])
        {
        <tr>
          <td>@specialty.GetSpecialtyId()</td>
          <td>@specialty.GetSpecialtyName()</td>
          <td><a href="/salon/specialty/@specialty.GetSpecialtyId()/delete">Delete</a></td>
        </tr>
        }
      </table>
      <p><a href='/salon/specialty/add'>Add Specialty to Stylist</a></p>
      <ul>
        <li> This is to select and add specialties from the existing list. Navigate to the home page to add new specialty types to the list of services</li>
      </ul>
      <p><a href='/'>Home</a></p>
    </div>
  </div>
</div>
